.page-header
  %h2 #{@village.name} Village (#{villager_count(@village)})

= link_to 'Start a new conversation', new_village_chat_path(@village)

.participation
- if current_user && current_user.joined?(@village)
  / = button_to 'Quit this village', village_participation_path(@village), method: :delete, class: 'btn btn-danger'
- else
  = link_to 'Join this village', village_participations_path(@village), method: :post, class: 'btn'